---
import BaseLayout from "../layouts/BaseLayout.astro";
import NewsletterForm from "../components/NewsletterForm.astro";
---

<BaseLayout title="The Breakdown — Newsletter">
  <div class="mx-auto min-h-screen max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <div class="mb-8">
      <a class="btn btn-sm btn-ghost" href="/">Back to Matroom</a>
    </div>

    <header class="mb-12 flex flex-col gap-2">
      <span
        class="font-sans text-xs font-bold uppercase tracking-[0.2em] text-sub-grey"
      >
        Digital Matroom v2.0
      </span>
      <h1
        class="font-b612 text-5xl font-black tracking-tight text-white sm:text-7xl"
      >
        The Breakdown
      </h1>
      <p class="max-w-xl font-sans text-lg text-sub-paper/80">
        Weekly notes. No spam. Just signal.
      </p>
    </header>

    <main class="grid grid-cols-1 gap-6 lg:grid-cols-[2fr_1fr]">
      <section
        class="rounded-2xl border border-main-surface bg-main-surface/40 p-6"
      >
        <p
          class="max-w-2xl font-sans text-sm leading-relaxed text-sub-paper/80"
        >
          Short, practical write-ups on grappling systems, training ideas, and
          the occasional tech workflow that makes the whole machine run
          smoother.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <div class="w-full max-w-sm">
            <NewsletterForm id="main-form" />
          </div>
          <a class="btn btn-sm btn-outline btn-ghost" href="/">
            BACK TO MATROOM
          </a>
        </div>

        <ul class="mt-8 grid gap-2 text-sm text-sub-paper/80">
          <li>Match notes &amp; frameworks</li>
          <li>Tech + workflow experiments</li>
          <li>Drops when new archive entries land</li>
        </ul>
      </section>

      <section class="rounded-2xl border border-main-surface p-6">
        <p class="font-b612 text-lg uppercase tracking-wide text-white">
          Work in progress
        </p>
        <p class="mt-3 text-sm text-sub-paper/80">
          Leave an email in the main form and I’ll ping you when this is fully
          live.
        </p>
      </section>
    </main>
  </div>
</BaseLayout>
