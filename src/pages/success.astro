---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Success | Rob Pins" description="Success page">
    <div
        class="flex min-h-[60vh] flex-col items-center justify-center px-4 text-center"
    >
        <h1
            class="font-b612 text-5xl font-black tracking-tight text-white mb-6"
        >
            Success!
        </h1>
        <p class="max-w-xl font-sans text-lg text-sub-paper/80 mb-12">
            Thanks for reaching out. I'll get back to you shortly.
        </p>
        <a
            href="/"
            class="rounded-full bg-main-gold px-8 py-3 font-sans text-sm font-bold uppercase tracking-widest text-ink-900 transition-all duration-300 hover:scale-105 hover:bg-gold-400 hover:shadow-lg hover:shadow-gold-500/20"
        >
            Return Home
        </a>
    </div>
</BaseLayout>
